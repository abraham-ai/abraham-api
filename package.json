{
  "name": "abraham-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "snapshot:generate": "tsx lib/snapshots/firstWorksSnapshot.ts",
    "merkle:generate": "tsx lib/snapshots/merkleTreeGenerator.ts",
    "update-snapshot": "tsx scripts/updateSnapshot.ts",
    "test:env": "tsx scripts/test-env.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "compile": "hardhat compile",
    "extract-abi": "cat artifacts/contracts/TheSeeds.sol/TheSeeds.json | jq '.abi' > lib/abi/TheSeeds.json",
    "postcompile": "npm run extract-abi",
    "test:contracts": "hardhat test",
    "deployseeds:local": "hardhat run deploy/deploy_seeds.ts",
    "deployseeds:sepolia": "hardhat run deploy/deploy_seeds.ts --network sepolia",
    "deployseeds:base-sepolia": "hardhat run deploy/deploy_seeds.ts --network baseSepolia",
    "deployseeds:base": "hardhat run deploy/deploy_seeds.ts --network baseMainnet",
    "grant-creator:base-sepolia": "hardhat run deploy/grant_creator_role.ts --network baseSepolia",
    "grant-creator:base": "hardhat run deploy/grant_creator_role.ts --network baseMainnet",
    "update-root": "tsx scripts/updateMerkleRoot.ts",
    "test-seed:base-sepolia": "NETWORK=baseSepolia tsx scripts/createTestSeed.ts",
    "test-seed:base": "NETWORK=base tsx scripts/createTestSeed.ts",
    "deploy:complete:base-sepolia": "NETWORK=baseSepolia tsx scripts/deployComplete.ts",
    "deploy:complete:base": "NETWORK=base tsx scripts/deployComplete.ts",
    "verify": "hardhat verify",
    "verify:contract": "tsx scripts/verifyContract.ts",
    "verify:contract:base-sepolia": "tsx scripts/verifyContract.ts -- --network baseSepolia",
    "verify:contract:base": "tsx scripts/verifyContract.ts -- --network baseMainnet"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@privy-io/server-auth": "^1.32.5",
    "@vercel/blob": "^2.0.0",
    "dotenv": "^17.2.3",
    "hono": "^4.10.2",
    "viem": "^2.38.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-verify": "^3.0.7",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/node": "^20.11.17",
    "hardhat": "^3.0.10",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
