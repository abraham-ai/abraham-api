{
  "name": "abraham-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "snapshot:generate": "tsx lib/snapshots/firstWorksSnapshot.ts",
    "merkle:generate": "tsx lib/snapshots/merkleTreeGenerator.ts",
    "update-snapshot": "tsx scripts/updateSnapshot.ts",
    "test:env": "tsx scripts/test-env.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "compile": "hardhat compile",
    "extract-abi": "cat artifacts/contracts/src/agents/abraham/AbrahamSeeds.sol/AbrahamSeeds.json | jq '.abi' > lib/abi/AbrahamSeeds.json && cat artifacts/contracts/src/modules/gating/MerkleGating.sol/MerkleGating.json | jq '.abi' > lib/abi/MerkleGating.json",
    "extract-abi:old": "cat artifacts/contracts/TheSeeds.sol/TheSeeds.json | jq '.abi' > lib/abi/TheSeeds.json",
    "postcompile": "npm run extract-abi",
    "test:contracts": "hardhat test",
    "deployseeds:local": "hardhat run deploy/deploy_seeds.ts",
    "deployseeds:sepolia": "hardhat run deploy/deploy_seeds.ts --network sepolia",
    "deployseeds:base-sepolia": "hardhat run deploy/deploy_seeds.ts --network baseSepolia",
    "deployseeds:base": "hardhat run deploy/deploy_seeds.ts --network baseMainnet",
    "deploy:abraham-seeds:base-sepolia": "hardhat run deploy/deploy_abraham_seeds.ts --network baseSepolia",
    "deploy:abraham-seeds:base": "hardhat run deploy/deploy_abraham_seeds.ts --network baseMainnet",
    "grant-creator:base-sepolia": "hardhat run deploy/grant_creator_role.ts --network baseSepolia",
    "grant-creator:base": "hardhat run deploy/grant_creator_role.ts --network baseMainnet",
    "update-root": "tsx scripts/updateMerkleRoot.ts",
    "test-seed:base-sepolia": "NETWORK=baseSepolia tsx scripts/createTestSeed.ts",
    "test-seed:base": "NETWORK=base tsx scripts/createTestSeed.ts",
    "deploy:complete:base-sepolia": "NETWORK=baseSepolia tsx scripts/deployComplete.ts",
    "deploy:complete:base": "NETWORK=base tsx scripts/deployComplete.ts",
    "deploy:abraham:sepolia": "hardhat run deploy/deploy_abraham.ts --network sepolia",
    "verify": "hardhat verify",
    "verify:contract": "tsx scripts/verifyContract.ts",
    "verify:contract:base-sepolia": "tsx scripts/verifyContract.ts -- --network baseSepolia",
    "verify:contract:base": "tsx scripts/verifyContract.ts -- --network baseMainnet",
    "verify:seeds": "tsx scripts/verifySeedsContract.ts",
    "verify:seeds:base-sepolia": "tsx scripts/verifySeedsContract.ts -- --network baseSepolia",
    "verify:seeds:base": "tsx scripts/verifySeedsContract.ts -- --network baseMainnet",
    "select-winner": "tsx scripts/selectWinner.ts",
    "switch-non-round": "tsx scripts/switchToNonRoundBased.ts",
    "extend-voting": "tsx scripts/extendVotingPeriod.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@privy-io/server-auth": "^1.32.5",
    "@vercel/blob": "^2.0.0",
    "dotenv": "^17.2.3",
    "hono": "^4.10.2",
    "pinata": "^2.5.2",
    "viem": "^2.38.4"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-verify": "^3.0.8",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/merkle-tree": "^1.0.8",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.17",
    "chai": "^6.2.1",
    "ethers": "^6.16.0",
    "hardhat": "^3.0.10",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
